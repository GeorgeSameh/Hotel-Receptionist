@model HotelSystem.Models.Room

<h2>Delete Room</h2>

<div>
    <h4>Are you sure you want to delete this room?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Room Number</dt>
        <dd class="col-sm-10">@Model.Floor</dd>
        <dt class="col-sm-2">Type</dt>
        <dd class="col-sm-10">@Model.Type</dd>
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>
        <dt class="col-sm-2">Is Available</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>

</div>
